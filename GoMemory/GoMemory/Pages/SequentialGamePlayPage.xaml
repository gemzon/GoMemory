<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GoMemory.Pages.SequentialGamePlayPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:GoMemory.Helpers;assembly=GoMemory">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="Android, UWP">0</On>
            <On Platform="iOS">0,20,0,0</On>
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout x:Name="Failed">

                <Image Source="{helpers:ImageResource GoMemory.Images.gameover.png}" />

                <Button
                    Clicked="RetryButton_Clicked"
                    Style="{StaticResource GreenButton}"
                    Text="Retry" />
            </StackLayout>
            <Image x:Name="Complete" Source="{helpers:ImageResource GoMemory.Images.complete.png}" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>