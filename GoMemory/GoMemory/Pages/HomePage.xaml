<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GoMemory.Pages.HomePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:GoMemory.Helpers;assembly=GoMemory"
    Title="{Binding Title}">

    <ContentPage.Content>
        <StackLayout>

            <Image
                x:Name="ImageLogo"
                Margin="10"
                HeightRequest="150"
                Source="{helpers:ImageResource GoMemory.Images.thinking.png}" />


            <Label Style="{StaticResource BlackTextLabel}" Text="Games" />
            <Button
                x:Name="AnchorBtn"
                Style="{StaticResource GoldenRodButton}"
                Text="What you see"
                WidthRequest="400" />
            <Button
                Style="{StaticResource GoldenRodButton}"
                Text="Color Complex"
                WidthRequest="{Binding Path=Width, Source={x:Reference AnchorBtn}}" />
            <Button
                Style="{StaticResource GoldenRodButton}"
                Text="Sequential"
                WidthRequest="{Binding Path=Width, Source={x:Reference AnchorBtn}}" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>